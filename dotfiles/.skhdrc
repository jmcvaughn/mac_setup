#-------------------------------------------------------------------------------
# Space domain
#-------------------------------------------------------------------------------

alt - b: yabai -m space --balance


#-------------------------------------------------------------------------------
# Window domain
#-------------------------------------------------------------------------------

# Focus
alt - h: yabai -m window --focus west
alt - j: yabai -m window --focus south
alt - k: yabai -m window --focus north
alt - l: yabai -m window --focus east

# Swap
alt + shift - h: yabai -m window --swap west
alt + shift - j: yabai -m window --swap south
alt + shift - k: yabai -m window --swap north
alt + shift - l: yabai -m window --swap east

# Space
alt + shift - q: yabai -m window --space 1
alt + shift - w: yabai -m window --space 2
alt + shift - e: yabai -m window --space 3
alt + shift - r: yabai -m window --space 4
alt + shift - t: yabai -m window --space 5
alt + shift - y: yabai -m window --space 6
alt + shift - u: yabai -m window --space 7
alt + shift - i: yabai -m window --space 8
alt + shift - o: yabai -m window --space 9
alt + shift - p: yabai -m window --space 10

# Toggle fullscreen
alt - z: yabai -m window --toggle float
alt - f: yabai -m window --toggle zoom-fullscreen

