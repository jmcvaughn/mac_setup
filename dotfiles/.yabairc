#!/bin/bash

#-------------------------------------------------------------------------------
# Config domain
#-------------------------------------------------------------------------------

# Global Settings
yabai -m config mouse_follows_focus on
yabai -m config window_placement second_child
yabai -m config split_ratio 0.5
yabai -m config mouse_modifier alt
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

# Space Settings
yabai -m config layout bsp


#-------------------------------------------------------------------------------
# Rule domain
#-------------------------------------------------------------------------------

# Launch to Display 1, Space 1
yabai -m rule --add label=anyconnect_d1s1 \
  app='Cisco AnyConnect Secure Mobility Client' \
  space=1

# Launch to Display 1, Space 3
yabai -m rule --add label=outlook_d1s3 \
  app='Microsoft Outlook' \
  space=3

# Launch to Display 1, Space 4
yabai -m rule --add label=webex_d1s4 \
  app='Cisco Webex Meetings' \
  space=4

yabai -m rule --add label=skype_d1s4 \
  app='Skype for Business' \
  space=4

yabai -m rule --add label=slack_d1s4 \
  app='Slack' \
  space=4

# Float applications
yabai -m rule --add label=alfredprefs_float \
  app='Alfred Preferences' \
  manage=off

yabai -m rule --add label=anyconnect_float \
  app='Cisco AnyConnect Secure Mobility Client' \
  manage=off

yabai -m rule --add label=finder_float \
  app='Finder' \
  manage=off

yabai -m rule --add label=installer_float \
  app='Installer' \
  manage=off

yabai -m rule --add label=sysprefs_float \
  app='System Preferences' \
  manage=off

# Float windows
yabai -m rule --add label=webexmain_float \
  app='Cisco Webex Meetings' \
  title='^$' \
  manage=off

yabai -m rule --add label=webexsplash_float \
  app='Cisco Webex Meetings' \
  title='Cisco Webex Meetings' \
  manage=off

yabai -m rule --add label=skypemain_float \
  app='Skype for Business' \
  title='Skype for Business' \
  manage=off

