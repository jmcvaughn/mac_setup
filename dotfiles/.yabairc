#!/bin/bash

#-------------------------------------------------------------------------------
# Config domain
#-------------------------------------------------------------------------------

# Global Settings
yabai -m config mouse_follows_focus on
yabai -m config window_placement second_child
yabai -m config split_ratio 0.5
yabai -m config mouse_modifier alt
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

# Space Settings
yabai -m config layout bsp


#-------------------------------------------------------------------------------
# Rule domain
#-------------------------------------------------------------------------------

# Launch to Display 1, Space 1 and float
yabai -m rule --add label=anyconnect_d1s1 \
  app='Cisco AnyConnect Secure Mobility Client' \
  space=1 \
  manage=off

# Float applications
yabai -m rule --add label=alfredprefs_float \
  app='Alfred Preferences' \
  manage=off

yabai -m rule --add label=finder_float \
  app='Finder' \
  manage=off

yabai -m rule --add label=installer_float \
  app='Installer' \
  manage=off

yabai -m rule --add label=sysprefs_float \
  app='System Preferences' \
  manage=off

# Float windows
yabai -m rule --add label=outlookmain_float \
  app='Microsoft Outlook' \
  title='^(Inbox|Calendar$|People$|Tasks$|Notes$)' \
  manage=off

yabai -m rule --add label=skypemainsplash_float \
  app='Skype for Business' \
  title='^(Skype for Business|Sign In)$' \
  manage=off

## Both splash screen and main window
yabai -m rule --add label=webexmain_float \
  app='Cisco Webex Meetings' \
  title='^(Cisco Webex Meetings|$)' \
  manage=off

